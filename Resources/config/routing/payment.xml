<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="kairos_subscription_payment" path="/form/{customerId}">
        <default key="_controller">KairosSubscriptionBundle:Payment:payment</default>
    </route>

    <route id="kairos_subscription_subscription" path="/subscription/{customerId}/{planId}">
        <default key="_controller">KairosSubscriptionBundle:Payment:subscription</default>
    </route>
</routes>