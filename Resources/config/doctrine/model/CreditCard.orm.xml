<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Kairos\SubscriptionBundle\Model\CreditCard">

        <field name="token" column="token" type="string" length="255" nullable="true" />

        <field name="defaultCreditCard" column="default_credit_card" type="boolean" nullable="true" />

        <field name="maskedNumber" column="masked_credit_card_number" type="string" length="255" nullable="true" />

        <field name="expirationDate" column="credit_card_expiration_date" type="string" length="31" nullable="true" />

    </mapped-superclass>

</doctrine-mapping>
